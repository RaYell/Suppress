<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net40;netstandard2.0</TargetFrameworks>
	<TargetFrameworks Condition="'$(OS)' != 'Windows_NT'">netstandard2.0</TargetFrameworks>
	<DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
	<CodeAnalysisRuleSet>Softlr.Suppress.ruleset</CodeAnalysisRuleSet>
	<LangVersion>latest</LangVersion>
	<Authors>Softlr</Authors>
    <Description>Constants for easy suppression of C# analyzers warnings and errors.</Description>
    <RootNamespace>Softlr</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <AdditionalFiles Include="..\..\_analysis\stylecop.json" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="codecracker.CSharp" Version="1.1.0">
		<PrivateAssets>all</PrivateAssets>
	</PackageReference>
    <PackageReference Include="JetBrains.Annotations" Version="11.1.0" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="7.2.0.5463">
		<PrivateAssets>all</PrivateAssets>
	</PackageReference>
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta008">
		<PrivateAssets>all</PrivateAssets>
	</PackageReference>
  </ItemGroup>
</Project>
